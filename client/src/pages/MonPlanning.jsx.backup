      {/* Modal demande remplacement */}
      {showModal && selectedShift && (
        <ModalDemandeRemplacement
          shift={selectedShift}
          onClose={() => { setShowModal(false); setSelectedShift(null); }}
          onSubmit={submitDemandeRemplacement}
